        <!-- Cart Page Start -->
        <div class="container-fluid py-5">
            <div class="container py-5">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                          <tr>
                            <th scope="col">Products</th>
                            <th scope="col">Name</th>
                            <th scope="col">Price</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Total</th>
                            <th scope="col">Handle</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% cart.forEach(function(item) { %>
                            <tr>
                                <th scope="row">
                                    <div class="d-flex align-items-center">
                                        <img src="img/<%= item.image %>" class="img-fluid me-5 rounded-circle" style="width: 80px; height: 80px;" alt="">
                                    </div>
                                </th>
                                <td>
                                    <p class="mb-0 mt-4"><%= item.name %></p>
                                </td>
                                <td >
                                  <div class="mb-0 mt-4">
                                    <% if (item.sale_price) { %>
                                      <span  class="text-primary">$<strong><%= item.sale_price %></strong></span>
                                      <span class="text-muted" style="text-decoration: line-through;">$<strong><%= item.price %></strong></span>
                                      <% } else { %>
                                      $<strong><%= item.price %></strong>
                                      <% } %>
                                  </div>
                                  
                                </td>
                                <td>
                                  <form id="updateForm_<%= item.id %>" action="/update_quantity" method="post" class="form-inline d-flex">
                                    <input type="hidden" name="id" value="<%= item.id %>">
                                    <div class="input-group quantity mt-4" style="width: 100px;">
                                      <div class="input-group-btn">
                                        <button type="submit" class="btn btn-sm btn-minus rounded-circle bg-light border" onclick="changeQuantity('<%= item.id %>', -1)">
                                          <i class="fa fa-minus"></i>
                                        </button>
                                      </div>
                                      <input type="number" style="transform: translateX(7px);" name="quantity" id="quantity_<%= item.id %>" value="<%= item.quantity || 1 %>" min="1" class="form-control form-control-sm text-center border-0 quantity-input">
                                      <div class="input-group-btn">
                                        <button type="submit" class="btn btn-sm btn-plus rounded-circle bg-light border" onclick="changeQuantity('<%= item.id %>', 1)">
                                          <i class="fa fa-plus"></i>
                                        </button>
                                      </div>
                                    </div>
                                  </form>
                                
                                  <!-- JavaScript for quantity change -->
                                  <script>
                                    function changeQuantity(itemId, change) {
                                      var input = document.getElementById('quantity_' + itemId);
                                      var newValue = parseInt(input.value) + change;
                                      if (newValue >= 1) {
                                        input.value = newValue;
                                      }
                                    }
                                
                                    function submitForm(itemId) {
                                      var form = document.getElementById('updateForm_' + itemId);
                                      var formData = new FormData(form);
                                
                                      fetch('/update_quantity', {
                                        method: 'POST',
                                        body: formData,
                                      })
                                      .then(response => response.json())
                                      .then(data => {
                                        console.log(data);
                                      })
                                      .catch(error => {
                                        console.error('Error:', error);
                                      });
                                    }
                                  </script>
                                </td>
                                
                                
                                <td >
                                  <div class="mb-0 mt-4">
                                    <% if (item.sale_price) { %>
                                      $<%= (item.quantity * item.sale_price).toFixed(2) %>
                                      <% } else { %>
                                      $<%= (item.quantity * item.price).toFixed(2) %>
                                    <% } %>

                                  </div>
                                </td>
                                <td>
                                  <form action="/remove_product" method="post">
                                    <input type="hidden" name="id" value="<%= item.id %>">

                                    <button class="btn btn-md rounded-circle bg-light border mt-4" type="submit" >
                                        <i class="fa fa-times text-danger"></i>
                                    </button>

                                  </form>
  
                                </td>
                            
                            </tr>
                            <% }) %>

                        </tbody>
                    </table>
                </div>

